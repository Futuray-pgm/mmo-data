<?xml version="1.0"?>
<UiLayout xmlns="http://mmo-dev.net/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://mmo-dev.net/ui UI.xsd">
	<Script file="CharCreate.lua" />

	<!-- Virtual character button -->
	<Frame name="CharClassButton" type="Button" renderer="ButtonRenderer">
		<Property name="Icon" />
		<Property name="Font" value="" />

		<Visual>
			<ImagerySection name="FrameNormal">
				<BorderComponent texture="Interface/GlueUI/CharButtonUp.htex" borderSize="16" />
			</ImagerySection>
			<ImagerySection name="FrameHovered">
				<BorderComponent texture="Interface/GlueUI/CharButtonHovered.htex" borderSize="16" />
			</ImagerySection>
			<ImagerySection name="FramePushed">
				<BorderComponent texture="Interface/GlueUI/CharButtonPushed.htex" borderSize="16" />
			</ImagerySection>
			<ImagerySection name="FrameDisabled">
				<BorderComponent texture="Interface/GlueUI/CharButtonDisabled.htex" borderSize="16" />
			</ImagerySection>
			<ImagerySection name="Icon">
				<ImageComponent>
					<Area><Inset all="16" /></Area>
					<PropertyValue property="Icon" />
				</ImageComponent>
				<TextComponent color="FFEED37C" horzAlign="CENTER" vertAlign="TOP">
					<Area>
						<Inset left="0" top="200" />
					</Area>
				</TextComponent>
			</ImagerySection>
			<StateImagery name="Normal">
				<Layer>
					<Section section="FrameNormal" />
					<Section section="Icon" />
				</Layer>
			</StateImagery>
			<StateImagery name="Hovered">
				<Layer>
					<Section section="FrameHovered" />
					<Section section="Icon" />
				</Layer>
			</StateImagery>
			<StateImagery name="Pushed">
				<Layer>
					<Section section="FramePushed" />
					<Section section="Icon" />
				</Layer>
			</StateImagery>
			<StateImagery name="Disabled">
				<Layer>
					<Section section="FrameDisabled" />
					<Section section="Icon" />
				</Layer>
			</StateImagery>
		</Visual>
		<Area>
			<Size><AbsDimension x="192" y="192" /></Size>
		</Area>
	</Frame>
	
	<!-- This is the character selection screen frame. It covers the whole screen. -->
	<Frame name="CharCreate" parent="GlueParent" setAllPoints="true" renderer="DefaultRenderer">
		<Property name="Visible" value="false" />

		<!-- For now, only a placeholder image is rendered in the background -->
		<Visual>
			<ImagerySection name="Background">
				<ImageComponent texture="Interface/GlueUI/BackgroundPH.htex" tiling="NONE" />
			</ImagerySection>
			<StateImagery name="Enabled">
				<Layer>
					<Section section="Background" />
				</Layer>
			</StateImagery>
		</Visual>
		
		<Frame name="CharCreateModel" type="Model" setAllPoints="true" renderer="ModelRenderer">
			<Property name="Visible" value="false" />
			<Property name="ModelFile" value="Models/Cube/Cube.hmsh" />
		</Frame>
		
		<Frame name="MaleButton" inherits="CharClassButton">
			<Property name="Icon" value="Interface/Icons/Classes/Warrior.htex" />
			<Property name="Text" value="MALE" />
			
			<Area>
				<Anchor point="TOP" offset="32" />
				<Anchor point="H_CENTER" offset="-112" />
			</Area>
		</Frame>
		
		<Frame name="FemaleButton" inherits="CharClassButton">
			<Property name="Icon" value="Interface/Icons/Classes/Warrior.htex" />
			<Property name="Text" value="FEMALE" />
			
			<Area>
				<Anchor point="TOP" offset="32" />
				<Anchor point="H_CENTER" offset="112" />
			</Area>
		</Frame>
		
		<Frame renderer="DefaultRenderer">
			<Area>
				<Anchor point="LEFT"/>
				<Anchor point="RIGHT"/>
				<Anchor point="BOTTOM"/>
				<Size>
					<AbsDimension y="200" />
				</Size>
			</Area>
			<Visual>
				<ImagerySection name="Background">
					<ImageComponent texture="Interface/GlueUI/GradientBlack.htex" tiling="HORZ" />
				</ImagerySection>

				<StateImagery name="Enabled">
					<Layer>
						<Section section="Background" />
					</Layer>
				</StateImagery>
			</Visual>

			<Frame name="CharCreateSubmitButton" inherits="GlueButtonPrimary">
				<Property name="Text" value="CREATE_CHARACTER" />
				<Area>
					<Anchor point="BOTTOM" offset="-24" />
					<Anchor point="H_CENTER" />
				</Area>
			</Frame>
				
			<Frame name="WarriorClassButton" inherits="CharClassButton">
				<Property name="Icon" value="Interface/Icons/Classes/Warrior.htex" />
				<Property name="Text" value="WARRIOR" />
				
				<Area>
					<Anchor point="BOTTOM" offset="-256" />
					<Anchor point="H_CENTER" />
				</Area>
			</Frame>

			<Frame name="PaladinClassButton" inherits="CharClassButton">
				<Property name="Icon" value="Interface/Icons/Classes/Paladin.htex" />
				<Property name="Text" value="PALADIN" />
				
				<Area>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="WarriorClassButton" offset="16" />
					<Anchor point="BOTTOM" relativeTo="WarriorClassButton" />
				</Area>
			</Frame>
			<Frame name="MageClassButton" inherits="CharClassButton">
				<Property name="Icon" value="Interface/Icons/Classes/Mage.htex" />
				<Property name="Text" value="MAGE" />
				
				<Area>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="PaladinClassButton" offset="16" />
					<Anchor point="BOTTOM" relativeTo="WarriorClassButton" />
				</Area>
			</Frame>
			<Frame name="NecromancerClassButton" inherits="CharClassButton">
				<Property name="Icon" value="Interface/Icons/Classes/Necromancer.htex" />
				<Property name="Text" value="NECROMANCER" />

				<Area>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="MageClassButton" offset="16" />
					<Anchor point="BOTTOM" relativeTo="WarriorClassButton" />
				</Area>
			</Frame>

			<Frame name="NewCharacterNameBox" inherits="GlueTextField">
				<Area>
					<Anchor point="BOTTOM" relativePoint="TOP" relativeTo="CharCreateSubmitButton" offset="-8" />
					<Anchor point="H_CENTER" />
				</Area>
			</Frame>

			<Frame name="CancelCharCreationButton" inherits="GlueButton">
				<Property name="Text" value="CANCEL" />
				<Area>
					<Anchor point="RIGHT" offset="-24" />
					<Anchor point="BOTTOM" offset="-24" />
				</Area>
			</Frame>
		</Frame>
	</Frame>
</UiLayout>
